{
    "extends": "@tsconfig/node18/tsconfig.json",
    "compilerOptions": {
        "lib": ["es2022"],
        "module": "ES2022",
        "target": "es2022",
        "outDir": "dist/mjs",
        "declarationDir": "dist/mjs",
        "declaration": true,
        "sourceMap": true,
        "inlineSources": true,
		"alwaysStrict": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "nodenext",
        "paths": {
            "@src/*": ["./src/ts/*"]
        }
    },
    "include": [
        "src/ts/**/*",
        "test/ts/**/*"
    ]
}